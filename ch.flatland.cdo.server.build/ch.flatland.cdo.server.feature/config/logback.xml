<?xml version="1.0" encoding="UTF-8"?>

<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder 
			by default -->
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{70} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<logger name="org.eclipse.jetty" level="INFO" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>

	<logger name="org.eclipse.jetty.server.session" level="INFO"
		additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>

	<logger name="org.eclipse.jetty.server.Server" level="INFO"
		additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	
	<logger name="ch.flatland.cdo.util.DataStore" level="DEBUG"
		additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	
	<logger name="ch.flatland.cdo.util.AbstractServlet" level="DEBUG"
		additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	
	<logger name="ch.flatland.cdo.util.View" level="DEBUG"
		additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
		
	<logger name="ch.flatland.cdo.service.repoaccess.SessionFactory" level="DEBUG"
		additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	
	<logger name="ch.flatland.cdo.service.repoaccess.internal.SessionManager" level="DEBUG"
		additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	
	<logger name="com.cs.mdr.service.CacheManager" level="TRACE"
		additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	
	<logger name="com.cs.mdr.service.upload.AbstractUploadService" level="DEBUG"
		additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>AbstractRoutingServlet
	
	<logger name="com.cs.mdr.service.AbstractRoutingServlet" level="DEBUG"
		additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>

	<!-- Strictly speaking, the level attribute is not necessary since -->
	<!-- the level of the root level is set to DEBUG by default. -->
	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>